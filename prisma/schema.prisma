// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user") // "superadmin" | "user"

  // 2FA fields
  twoFactorEnabled Boolean   @default(false)
  twoFactorSecret  String?   // Encrypted TOTP secret

  accounts      Account[]
  sessions      Session[]
  tasks         Task[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Task {
  id           String    @id @default(cuid())
  jiraKey      String    @unique    // e.g., "JINFRA-649"
  jiraId       String?              // Jira's internal ID
  summary      String
  description  String?
  status       String    @default("To Do")
  priority     String    @default("Medium")
  assignee     String?              // Jira username/email
  taskType     String?              // NEW_PRODUCT_CONFIG | CONFIG_UPDATE | INFRASTRUCTURE | OTHER

  createdBy    User      @relation(fields: [userId], references: [id])
  userId       String

  partner      Partner?  @relation(fields: [partnerId], references: [id])
  partnerId    String?              // Null = "Other" (no specific partner)

  comments     Comment[]

  lastSyncedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Comment {
  id              String   @id @default(cuid())
  jiraCommentId   String   @unique  // Jira's comment ID for sync

  task            Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId          String

  authorName      String              // Display name of comment author
  authorEmail     String?             // Email of comment author
  authorAvatar    String?             // Avatar URL

  body            String              // Plain text content

  jiraCreatedAt   DateTime            // When created in Jira
  jiraUpdatedAt   DateTime            // When last updated in Jira

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Partner {
  id              String      @id @default(cuid())
  name            String      @unique
  uploadKey       String      @unique  // 32-char alphanumeric for uploader system
  dateAdded       DateTime    @default(now())

  // Classification
  platform        String?     // WHMCS | BROKER_PANEL | PARTNER_PORTAL
  partnerType     String?     // BROKER | AFFILIATE | EA | OTHER
  config          String?     // LOCKED_DOWN | STANDARD | CUSTOM
  partnerStatus   String      @default("PRE_SALES")  // PRE_SALES | IN_PROGRESS | LIVE | INACTIVE

  // Features
  hasLandingPage  Boolean     @default(false)

  // Contact
  supportChannel  String?     // Free text: Skype, Teams, Email, Slack, etc.
  contactName     String?
  contactEmail    String?

  // Business
  commission      Int?        // Percentage (0-100), only for affiliates
  notes           String?     // Admin notes about the partner

  tasks           Task[]

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}
